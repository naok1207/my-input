# foreach
{ $:CT_BE/for/ $:SP
  $#1:B_P $var:ID_C $#1:E_P $:SP
  $:IN $:SP
  $#3:B_P $array:ID_C $#3:E_P $[: $:SP $]? $[: $:SP_B $]? 
  $:/(?:CT_DO|SP_NL)/ }
  => { 'Ruby':LANG 'FOREACH':MODEL  $var:VAR $array:ARRAY }



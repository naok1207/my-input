# if 
{ $:CT_IF $:SP
  $[cond: $[: $:B_P $:ANY $:E_P $]+ $] $[: $:SP $]? $[: $:SP_B $]?
  $:/(?:THEN|SP_NL)/ }
  => { 'Ruby':LANG 'IF':MODEL '':B_COND $cond '':E_COND}

{ $:CT_IF $:SP
  $[: $:P_L $:SP $]
  $[cond: $[: $:B_P $:ANY $:E_P $]+ $]
  $[: $:SP $:P_R $] $:SP
  $:THEN }
  => { 'Ruby':LANG 'IF':MODEL '':B_COND $cond '':E_COND}

# elsif

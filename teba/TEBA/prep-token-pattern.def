# Spaces for preprocessor
@_SP => "(?:SP_(?:B|C|NC)).*+\n"
@SP  => "(?:@_SP)*+"
@SP1 => "(?:@_SP)++"

@LINETOP => "(?:(?:UNIT_BEGIN|SP_NL)\s.*+\n)"
@LINEEND => "(?:(?:UNIT_END|SP_NL)\s.*+\n)"

@_ANYTOKEN => "(?:[^S]|SC).*+\n"
# not including SP_*
@_ANYTOKEN_SP => "(?:[^SU]|SC).*\n|@_SP"

@ANYTOKENSP => "(?:@_ANYTOKEN_SP)*+"

@MACROBODY => "@_ANYTOKEN(?:(?:@_SP)*(?:@_ANYTOKEN)+)*"

@ANYCONDS => "(?:(?:IDN|ID_MC|SP|OP|P_|ATTR|LI).*+\n)*?"

@ARGS => "(?:(?:IDN|CA|SP_\w+)\s.*+\n)*+"

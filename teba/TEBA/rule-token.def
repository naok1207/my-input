C_L	/{/
C_R	/}/
TOR	/=>>/
TO	/=>/

#VAR_TYPE	/\$\w*(?:#\w+)?:(?:\w+|\/\S+\/)(?:\/(?:(?<!\\).|\\.)*?(?<!\\)\/)?/
#VAR_TYPE	/\$\w*(?:#\w+)?:(?:\w+|\/\S+\/)(?:\/\S*\/)?/
#VAR_TYPE	/\$\w*(?:#\w+)?:(?:\w+|\/\S+\/)(?:\/(?:(?<!\\).|\\.)*?\/)?/
VAR_TYPE	/\$\w*(?:#\w+)?:(?:\w+|\/\S+\/)(?:\/(?:\\.|(?<!\\).)*?\/)?/
# The order of \\. and (?<!\\). is important. In the case of the reverse order,
# pattern fails to match the shortest region for the input
# "$:X/\\\\/ ... $:Y/hoge/".

VAR_TEXT	/\$\w*(?:#\w+)?:'(?:(?<!\\).|\\.)*?(?<!\\)'/
VAR_REF		/\$\w+/

# '$' is optional. Keep this for compatibility.
B_GRP		/\$?\[\w*:/
E_GRP		/\$?\][\*\+]?[\?\+]?/
OR		/\$?\|/

# '$' is necessary. '#' is the head mark of a comment.
JOIN		/\$\#\#/
STR		/\$\#/

TOKEN_TEXT	/'(?:(?<!\\).|\\.)*?'(?:#\w+)?:\w+/



SP	/#[^\n]*\n/
SP	/(?:\s|\n)+/

PNAME	/\@\w+/
PVALUE	/".*?"(?=\n)/
PINCLUDE	/\@"[-.\/\w]+"/

BREAK	/\@!BREAK!/
PRINT	/\@!PRINT!/
CALL	/\@\|.*?\|/
NO_MATCH	/\@:NO_MATCH:\w+:/
LABEL   /\@:LABEL:\w+:/

IN	/in\b/
IDN	/\w+/

B_CMT	/\[\*/
E_CMT	/\*\]/

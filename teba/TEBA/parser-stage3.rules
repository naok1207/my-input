# treat independet 'else' as the top of statement.
# if (c) a(); else b(); else c()
#   => B_ST if(c) a(); else b(); E_ST B_ST else c(); E_ST
@_STMT => "@_STMT|(?:_EL|_NO_IF).*\n"
{ $else:CT_EL $sp:SP $b#1:B_ST } => { $else '':_NO_IF $sp $b }
@:NO_MATCH:END_NOIF:
{ $else:CT_EL $:_NO_IF $sp:SP $b#1:B_ST $any:ANYSTMT $e#1:E_ST }
=>> { ''#1:B_ST $else $sp $b $any $e ''#1:E_ST }
@:LABEL:END_NOIF:

# clean up
{ $:_EL } => {}
